{
	"name": "vite-plugin-livescript",
	"version": "3.0.2",
	"description": "A Vite plugin for your LiveScript projects",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/vite-plugin-livescript"
	},
	"main": "./dist/plugin.js",
	"exports": {
		".": {
			"import": "./dist/plugin.mjs",
			"require": "./dist/plugin.js",
			"types": "./dist/plugin.d.ts"
		}
	},
	"types": "./dist/plugin.d.ts",
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "biome check --config-path=biome.jsonc --no-errors-on-unmatched --vcs-enabled=true --vcs-use-ignore-file=true",
		"prepack": "npm run build",
		"publish:npm": "np --any-branch",
		"test": "uvu tests --ignore 'dist' --ignore 'fixtures'"
	},
	"keywords": [
		"vite-plugin",
		"livescript"
	],
	"devDependencies": {
		"@biomejs/biome": "^2.0.5",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/node": "^22.15.3",
		"concurrently": "^9.2.0",
		"lefthook": "^1.11.14",
		"livescript": "^1.6.0",
		"np": "^10.2.0",
		"tsdown": "^0.12.9",
		"typescript": "^5.8.3",
		"uvu": "^0.5.6",
		"vite": "^7.0.0"
	},
	"peerDependencies": {
		"livescript": ">=1.6.0",
		"vite": "^5.0.0 || ^6.0.0 || >=7.0.0"
	},
	"packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971"
}
