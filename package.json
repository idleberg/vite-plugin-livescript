{
  "name": "vite-plugin-livescript",
  "version": "1.0.0",
  "description": "A Vite plugin for your LiveScript projects",
  "license": "MIT",
  "author": "Jan T. Sott",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/vite-plugin-livescript"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:esm": "tsup index.ts --format esm --platform node --dts",
    "build:cjs": "tsup index.ts --format cjs --platform node --dts",
    "lint": "eslint index.ts --ignore-path .gitignore",
    "prepack": "npm run build",
    "prepare": "husky install",
    "release": "np --no-yarn --any-branch",
    "test": "uvu tests --ignore 'dist' --ignore 'fixtures'"
  },
  "keywords": [
    "vite-plugin",
    "livescript"
  ],
  "dependencies": {
    "livescript": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^14.18.63",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "livescript": "^1.6.0",
    "np": "^8.0.4",
    "npm-run-all2": "^6.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "uvu": "^0.5.6",
    "vite": "^4.5.3"
  },
  "peerDependencies": {
    "vite": "^4.0.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
